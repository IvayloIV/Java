<pretty-config xmlns="http://ocpsoft.org/schema/rewrite-config-prettyfaces"
               xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:schemaLocation="http://ocpsoft.org/schema/rewrite-config-prettyfaces
                      http://ocpsoft.org/xml/ns/prettyfaces/rewrite-config-prettyfaces.xsd">

    <url-mapping id="index">
        <pattern value="/" />
        <view-id value="/faces/view/index.xhtml" />
    </url-mapping>

    <url-mapping id="login">
        <pattern value="/user/login" />
        <view-id value="/faces/view/login.xhtml" />
    </url-mapping>

    <url-mapping id="register">
        <pattern value="/user/register" />
        <view-id value="/faces/view/register.xhtml" />
    </url-mapping>

    <url-mapping id="home">
        <pattern value="/home" />
        <view-id value="/faces/view/home.xhtml" />
    </url-mapping>

    <url-mapping id="createJob">
        <pattern value="/job/create" />
        <view-id value="/faces/view/createJob.xhtml" />
    </url-mapping>

    <url-mapping id="jobDetails">
        <pattern value="/job/details" />
        <view-id value="/faces/view/jobDetails.xhtml" />
    </url-mapping>

    <url-mapping id="removeJob">
        <pattern value="/job/remove" />
        <view-id value="/faces/view/removeJob.xhtml" />
    </url-mapping>

</pretty-config>