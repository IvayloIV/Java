<pretty-config xmlns="http://ocpsoft.org/schema/rewrite-config-prettyfaces"
               xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:schemaLocation="http://ocpsoft.org/schema/rewrite-config-prettyfaces
                      http://ocpsoft.org/xml/ns/prettyfaces/rewrite-config-prettyfaces.xsd">

    <url-mapping id="index">
        <pattern value="/" />
        <view-id value="/faces/view/index.xhtml" />
    </url-mapping>

    <url-mapping id="login">
        <pattern value="/user/login" />
        <view-id value="/faces/view/login.xhtml" />
    </url-mapping>

    <url-mapping id="register">
        <pattern value="/user/register" />
        <view-id value="/faces/view/register.xhtml" />
    </url-mapping>

    <url-mapping id="home">
        <pattern value="/home" />
        <view-id value="/faces/view/home.xhtml" />
    </url-mapping>

    <url-mapping id="createProblem">
        <pattern value="/problem/create" />
        <view-id value="/faces/view/createProblem.xhtml" />
    </url-mapping>

    <url-mapping id="createSubmission">
        <pattern value="/submission/create" />
        <view-id value="/faces/view/createSubmission.xhtml" />
    </url-mapping>

    <url-mapping id="problemDetails">
        <pattern value="/problem/details" />
        <view-id value="/faces/view/problemDetails.xhtml" />
    </url-mapping>

    <url-mapping id="submissionDetails">
        <pattern value="/submission/details" />
        <view-id value="/faces/view/submissionDetails.xhtml" />
    </url-mapping>

</pretty-config>